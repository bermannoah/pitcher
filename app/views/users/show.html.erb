<div class="jumbotron col-md-6 user-page-profile">
  <p class="user-page-text">Name: <%= current_user.name %></p>
  <p class="user-page-text">Email: <%= current_user.email %></p>
    <div>
      <%= link_to "Edit Account", edit_user_path(current_user) %>
      <%= link_to "Delete Account", user_path(current_user), method: :delete, data: { confirm: "Are you sure? This cannot be undone. It will delete all of your pitches and contacts forever." } %>
    </div>
</div>

<div class="jumbotron col-md-4 user-page-pitches">
  <ul class="user-page-text">
  Pitches: <% @user.pitches.each do |pitch| %>
              <li><%= link_to pitch.title, user_pitch_path(@user, pitch) %></li>
              <%= link_to "Edit Pitch", edit_user_pitch_path(@user, pitch) %>
              <%= link_to "Delete Pitch", user_pitch_path(@user, pitch), method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
  </ul>
</div>

<div class="btn btn-default button-text-override">
  <%= link_to "Create a new pitch", new_user_pitch_path(@user) %>
</div>